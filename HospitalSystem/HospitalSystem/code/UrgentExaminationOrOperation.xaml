            <!--<TabItem Header="Examination/Operation">-->
                <StackPanel>
                    <StackPanel Height="Auto" Width="Auto" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,60,0,0" >
                        <Label Content="Patient:" Padding="0,0,20,0"/>
                        <ComboBox x:Name="cbPatient" Width="200">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Path=Id}"/>
                                        <TextBlock Text="  "/>
                                        <TextBlock Text="{Binding Path=FirstName}"/>
                                        <TextBlock Text=" "/>
                                        <TextBlock Text="{Binding Path=LastName}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Height="Auto" Width="Auto" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,60,40,0" >
                        <Label Content="Specialization:" Padding="0,0,20,0"/>
                        <ComboBox x:Name="cbSpecialization" Width="200" SelectionChanged="specializationChanged" >
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Path=Specialization}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Height="Auto" Width="Auto" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,60,0,0" >
                        <Label Content="Doctor:" Padding="0,0,20,0"/>
                        <ComboBox x:Name="cbDoctor" Width="200">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Path=Id}"/>
                                        <TextBlock Text="  "/>
                                        <TextBlock Text="{Binding Path=FirstName}"/>
                                        <TextBlock Text=" "/>
                                        <TextBlock Text="{Binding Path=LastName}"/>
                                        <TextBlock Text=" - "/>
                                        <TextBlock Text="{Binding Path=Specialization}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Height="Auto" Width="Auto" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,60,0,0" >
                        <Label Content="Room:" Padding="0,0,20,0"/>
                        <ComboBox x:Name="cbRoom" Width="200">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Path=Id}"/>
                                        <TextBlock Text=" - "/>
                                        <TextBlock Text="{Binding Path=Name}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
            <StackPanel Height="Auto" Width="Auto" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,60,0,0" >
                        <Label Content="Date:" Padding="0,0,20,0"/>
                <DatePicker x:Name="dpDate" HorizontalAlignment="Left"  VerticalAlignment="Top"  Width="200" FirstDayOfWeek="Monday " 
                                    IsTodayHighlighted="True" SelectedDate="{x:Static sys:DateTime.Now}" IsEnabled="False"/>
                        <!--xmlns:sys="clr-namespace:System;assembly=mscorlib"  to sam dodao gore-->
                    </StackPanel>
                    <StackPanel  Height="Auto" Width="Auto" Orientation="Horizontal" HorizontalAlignment="Center"  Margin="50">
                        <StackPanel Height="Auto" Width="Auto" Orientation="Horizontal" HorizontalAlignment="Center" >
                            <Label Content="Time:" Padding="0,0,20,0"/>
                            <TextBox x:Name="txtTime" TextWrapping="Wrap" Width="60" Height="20" IsReadOnly="True" />
                        </StackPanel>
                        <StackPanel Height="Auto" Width="Auto" Orientation="Horizontal" HorizontalAlignment="Center" Margin="50,0,0,0">
                            <CheckBox x:Name="cbOperation" Content="Operation" Height="26" Padding="8,0,0,0" VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Height="Auto" Width="Auto" Margin="0,10,0,0">
                        <TextBlock Text="&lt; save" TextWrapping="Wrap" PreviewMouseDown="txbSave_PreviewMouseDown" Cursor="Hand" FontSize="20" 
                                   HorizontalAlignment="Right" Margin="0,0,50,20" Padding="10,10,10,10" >
                            <TextBlock.Style>
                                <Style>
                                    <Setter Property="TextBlock.TextDecorations" Value="" />
                                    <Style.Triggers>
                                        <Trigger Property="UIElement.IsMouseOver" Value="True">
                                            <Setter Property="TextBlock.TextDecorations" Value="Underline" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style></TextBlock>
                    </StackPanel>
            <DataGrid x:Name="dgApp" Height="100" AutoGenerateColumns="False" Visibility="Hidden" SelectionChanged="dataGrid_SelectionChanged"
                                  SelectionMode="Single" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserAddRows="False"
                                  CanUserResizeRows="False" IsReadOnly="True" ColumnWidth="*" AlternatingRowBackground="#FFE0DFDF" RowHeaderWidth="10" HeadersVisibility="Column" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="App ID" Binding="{Binding Id}"/>
                    <DataGridTemplateColumn Header="Patient" Width="2*" >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Path=Patient.Id}"/>
                                    <TextBlock Text="    "/>
                                    <TextBlock Text="{Binding Path=Patient.FirstName}"/>
                                    <TextBlock Text=" "/>
                                    <TextBlock Text="{Binding Path=Patient.LastName}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Doctor" Width="2*" >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Path=Doctor.FirstName}"/>
                                    <TextBlock Text=" "/>
                                    <TextBlock Text="{Binding Path=Doctor.LastName}"/>
                                    <TextBlock Text=" - "/>
                                    <TextBlock Text="{Binding Path=Doctor.Specialization}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Room">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Path=Room.Id}"/>
                                    <TextBlock Text="    "/>
                                    <TextBlock Text="{Binding Path=Room.Name}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat={}{0:dd/MM/yyyy}}" />
                    <DataGridTextColumn Header="Time" Binding="{Binding Time, StringFormat={}{0:HH:mm }}" />
                    <DataGridCheckBoxColumn Header="Operation" Binding="{Binding IsOperation}"/>
                </DataGrid.Columns>
            </DataGrid>
            <TextBox x:Name="txtNext" TextWrapping="Wrap" Width="120"/>
        </StackPanel>
            <!--</TabItem>
        </TabControl>-->
    </Grid>
</Window>
