                                <Label Content="Doctor:" Grid.Row="2" Grid.Column="0" Margin="70,190,889,96" Padding="0,0,20,0" Grid.RowSpan="2"/>

                                <Button Content="Save" ToolTip="Save refferal" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" Margin="0,30,80,30" Height="36" VerticalAlignment="Center" Width="118" Click="Button_Save_Refferal"/>
                            </Grid>
                        </StackPanel>
                    </TabItem>
                    <TabItem Name="tHospitalization" ToolTip="Hospitalization" Header="Hospitalization">
                        <StackPanel>
                            <Grid Height="Auto" Width="Auto" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="68*"/>
                                    <ColumnDefinition Width="193*"/>

                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="97.693"/>
                                    <RowDefinition Height="30*"/>
                                    <RowDefinition Height="30*"/>
                                    <RowDefinition Height="19*"/>
                                    <RowDefinition Height="75*"/>
                                </Grid.RowDefinitions>
                                <Rectangle HorizontalAlignment="Left" Height="443" Margin="29,38,0,0" Stroke="Black" VerticalAlignment="Top" Width="981" Grid.ColumnSpan="2" Grid.RowSpan="5"/>
