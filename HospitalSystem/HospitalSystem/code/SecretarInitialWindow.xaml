<Window x:Class="HospitalSystem.code.SecretarInitialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalSystem.code"
        mc:Ignorable="d"
        Title="SecretarInitialWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dg" HorizontalAlignment="Left" Margin="20,68,0,0" VerticalAlignment="Top" SelectionMode="Single" CanUserReorderColumns="False" CanUserResizeColumns="False"
                  CanUserAddRows="False" CanUserResizeRows="False" IsReadOnly="True" MaxHeight="325" MaxWidth="600" />
        <!-- ItemsSource="{Binding Path = PatientStorage, Mode=OneWay, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}" />--> 

        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="669,106,0,0" VerticalAlignment="Top" Click="btnAdd_Click" Height="30" Width="77"/>
        <Button Name="btnEdit" Content="Edit" HorizontalAlignment="Left" Height="30" Margin="669,167,0,0" VerticalAlignment="Top" Width="77" Click="btnEdit_Click"/>
        <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Height="30" Margin="669,229,0,0" VerticalAlignment="Top" Width="77" RenderTransformOrigin="0.525,2.527" Click="btnDelete_Click"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Text="&lt; back" TextWrapping="Wrap" VerticalAlignment="Top" PreviewMouseDown="txb_PreviewMouseDown"
                   RenderTransformOrigin="-0.729,0.399"  Cursor="Hand">
                <TextBlock.Style>
                    <Style>
                        <Setter Property="TextBlock.TextDecorations" Value="" />
                        <Style.Triggers>
                            <Trigger Property="TextBlock.IsMouseOver" Value="True">
                                <Setter Property="TextBlock.TextDecorations" Value="Underline" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

    </Grid>
</Window>
