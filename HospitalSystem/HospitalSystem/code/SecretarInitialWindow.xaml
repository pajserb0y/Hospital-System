<Window x:Class="HospitalSystem.code.SecretarInitialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalSystem.code"
        mc:Ignorable="d"
        Title="Patients" Height="700" Width="1300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <DataGrid x:Name="dg" HorizontalAlignment="Left" Margin="79,78,0,0" VerticalAlignment="Top" SelectionMode="Single" CanUserReorderColumns="False" CanUserResizeColumns="False"
                  CanUserAddRows="False" CanUserResizeRows="False" IsReadOnly="True" Height="532" Width="967" ColumnWidth="*" AlternatingRowBackground="#FFE0DFDF" RowHeaderWidth="10"
                  HeadersVisibility="Column" >
            <!-- ItemsSource="{Binding Path = PatientStorage, Mode=OneWay, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}" />-->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="#FF0023FF"/>
                            <Setter Property="BorderThickness" Value="0.8" />
                            <!--<Setter Property="ScrollViewer.IsEnabled" Value="False" />-->
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

        </DataGrid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Text="&lt; back" TextWrapping="Wrap" VerticalAlignment="Top" PreviewMouseDown="txbBack_PreviewMouseDown"
                   RenderTransformOrigin="-0.729,0.399"  Cursor="Hand" FontSize="17">
            <TextBlock.Style>
                <Style>
                    <Setter Property="TextBlock.TextDecorations" Value="" />
                    <Style.Triggers>
                        <Trigger Property="TextBlock.IsMouseOver" Value="True">
                            <Setter Property="TextBlock.TextDecorations" Value="Underline" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="1143,116,0,0" Text="+ add" TextWrapping="Wrap" VerticalAlignment="Top" PreviewMouseDown="txbAdd_PreviewMouseDown"
                   RenderTransformOrigin="-0.729,0.399"  Cursor="Hand" FontSize="20">
            <TextBlock.Style>
                <Style>
                    <Setter Property="TextBlock.TextDecorations" Value="" />
                    <Style.Triggers>
                        <Trigger Property="TextBlock.IsMouseOver" Value="True">
                            <Setter Property="TextBlock.TextDecorations" Value="Underline" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="1143,178,0,0" Text="&lt; edit" TextWrapping="Wrap" VerticalAlignment="Top" PreviewMouseDown="txbEdit_PreviewMouseDown"
                   RenderTransformOrigin="-0.729,0.399"  Cursor="Hand" FontSize="20">
            <TextBlock.Style>
                <Style>
                    <Setter Property="TextBlock.TextDecorations" Value="" />
                    <Style.Triggers>
                        <Trigger Property="TextBlock.IsMouseOver" Value="True">
                            <Setter Property="TextBlock.TextDecorations" Value="Underline" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="1143,546,0,0" Text="delete &gt;" TextWrapping="Wrap" VerticalAlignment="Top" PreviewMouseDown="txbDelete_PreviewMouseDown"
                   RenderTransformOrigin="-0.729,0.399"  Cursor="Hand" FontSize="20">
            <TextBlock.Style>
                <Style>
                    <Setter Property="TextBlock.TextDecorations" Value="" />
                    <Style.Triggers>
                        <Trigger Property="TextBlock.IsMouseOver" Value="True">
                            <Setter Property="TextBlock.TextDecorations" Value="Underline" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style></TextBlock>
    </Grid>
</Window>
