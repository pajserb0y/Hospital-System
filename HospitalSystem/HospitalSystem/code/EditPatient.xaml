<Window x:Class="HospitalSystem.code.EditPatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalSystem.code"
        mc:Ignorable="d"
        Title="EditPatient" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="68*"/>
        </Grid.RowDefinitions>
        <Label Content="First Name:" HorizontalAlignment="Left" Margin="121,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Last Name:" HorizontalAlignment="Left" Margin="121,92,0,0" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <Label Content="JMBG:" HorizontalAlignment="Left" Margin="121,56,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <Label Content="Adress:" HorizontalAlignment="Left" Margin="455,36,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.652,6.979"/>
        <TextBox Name="txtIme" HorizontalAlignment="Left" Margin="235,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txtPrezime" HorizontalAlignment="Left" Margin="235,1,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
        <TextBox Name="txtJmbg" HorizontalAlignment="Left" Margin="235,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
        <TextBox Name="txtAdresa" HorizontalAlignment="Left" Margin="522,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txtTel" HorizontalAlignment="Left" Margin="522,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="303,170,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.457,0.986" Width="41" Click="btSave_Click" Grid.Row="1"/>
        <Label Content="Telephone:" HorizontalAlignment="Left" Margin="455,1,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.652,6.979" Grid.Row="1"/>
    </Grid>
</Window>
